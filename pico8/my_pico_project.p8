--player movment

function _init()

	player={
   sp=1,
   x=59,
   y=59,
   w=8,
   h=8,
   flp=false,
   acc=1
	}

 gravity=.5

end

function _update()

player_update()

keep_plr_on_screen()

end

function _draw()

	cls() -- clear screen

  map(0,0)  -- where the game starts
  
  spr(player.sp,player.x,player.y,1,1,player.flp)  -- draw the player


end
-->8
function player_update()

    -- physics
    player.y+=gravity

    -- move left
    if btn(0) then
        player.x-=player.acc
        player.flp=true
    end

    -- move right
    if btn(1) then
        player.x+=player.acc
        player.flp=false
    end
    
    --jump
    if btn(2) then
        player.y-=player.acc
    end

    --limit player to map

end


function keep_plr_on_screen()

    -- stop at bottom of screen
    if player.y >= 111 then
        player.y = 111
    end

    -- stop at top of screen
    if player.y <= 0 then
        player.y = 0
    end

    -- reset on right of screen
    if player.x > 127 then
        player.x = 0
    end

    -- reset on left of screen
    if player.x <= -8 then
        player.x = 127
    end

end
